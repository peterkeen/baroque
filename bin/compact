#!/usr/bin/env ruby

require 'rubygems'

begin
  require 'mail_client'
rescue LoadError => e
  path = File.expand_path '../../lib', __FILE__
  $:.unshift(path) if File.directory?(path) && !$:.include?(path)
  require 'mail_client'
end

require 'mail_client/message_store'

store = MailClient::ObjectStore.new('messages')

store.pack_loose
